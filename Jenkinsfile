pipeline {
    agent any
    stages {
        
        stage("build") {
            steps {
                echo 'building the app...'
                echo 'App built.'
            }
        }
        stage("test") {
             
            steps {
                echo 'testing the app...'
                
                echo 'App tested.'
            }
        }
        stage("deploy") {
            steps {
                echo 'deploying the app...'
            }
        }
    }   
}
